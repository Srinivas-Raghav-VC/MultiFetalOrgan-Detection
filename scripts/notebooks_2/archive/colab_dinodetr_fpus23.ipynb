    {"cell_type":"code","execution_count":null,"metadata":{},"outputs":[],"source":["# Install deps\n","!pip -q install pycocotools \n","!pip -q install 'transformers>=4.43' 'accelerate>=0.31' 'datasets' 'evaluate' timm\n"]},
    {"cell_type":"code","execution_count":null,"metadata":{},"outputs":[],"source":["# Save to Drive (optional)\n","SAVE_TO_DRIVE = True\n","DRIVE_DIR = '/content/drive/MyDrive/FPUS23_transformers'\n","if SAVE_TO_DRIVE:\n","    from google.colab import drive; drive.mount('/content/drive', force_remount=True)\n","    import pathlib as p; p.Path(DRIVE_DIR).mkdir(parents=True, exist_ok=True)\n","    print('Saving to:', DRIVE_DIR)\n","else:\n","    print('Saving to local /content/outputs')\n"]},
    {"cell_type":"code","execution_count":null,"metadata":{},"outputs":[],"source":["# Toggles\n","USE_BALANCED = True\n","USE_DENOISE = False\n","print('USE_BALANCED=', USE_BALANCED, 'USE_DENOISE=', USE_DENOISE)\n"]},
    {"cell_type":"code","execution_count":null,"metadata":{},"outputs":[],"source":["# Paths\n","COCO_ROOT = '/content/fpus23_project/dataset/fpus23_coco'\n","if USE_BALANCED:\n","    TRAIN_JSON = f"{COCO_ROOT}/annotations/train_balanced.json"\n","    TRAIN_DIR  = f"{COCO_ROOT}/images_balanced/train"\n","else:\n","    TRAIN_JSON = f"{COCO_ROOT}/train.json"\n","    TRAIN_DIR  = f"{COCO_ROOT}/train"\n","VAL_JSON = f"{COCO_ROOT}/val.json"\n","VAL_DIR  = f"{COCO_ROOT}/val"\n","!ls -lh $TRAIN_DIR | head -10\n","!ls -lh $VAL_DIR | head -10\n"]},
    {"cell_type":"code","execution_count":null,"metadata":{},"outputs":[],"source":["# Optional: denoise TRAIN images (median blur)\n","import os, cv2, pathlib as p\n","if USE_DENOISE:\n","    INP = TRAIN_DIR\n","    OUT = f"{TRAIN_DIR}_denoised"\n","    p.Path(OUT).mkdir(parents=True, exist_ok=True)\n","    imgs = list(p.Path(INP).glob('*.png'))\n","    print('Denoising', len(imgs), 'images ->', OUT)\n","    for im in imgs:\n","        img = cv2.imread(str(im), cv2.IMREAD_UNCHANGED)\n","        den = cv2.medianBlur(img, 5)\n","        cv2.imwrite(str(p.Path(OUT)/im.name), den)\n","    TRAIN_DIR = OUT\n","    print('Updated TRAIN_DIR =', TRAIN_DIR)\n"]},
    {"cell_type":"markdown","metadata":{},"source":["## Train DINO-DETR (ResNet-50)"]},
    {"cell_type":"code","execution_count":null,"metadata":{},"outputs":[],"source":["MODEL  = 'IDEA-Research/dino-detr-resnet-50'\n","EPOCHS = 30\n","BATCH  = 8\n","LR     = 5e-5\n","OUTDIR = f"{DRIVE_DIR if SAVE_TO_DRIVE else '/content/outputs'}/dinodetr_fpus23_bal={int(USE_BALANCED)}_den={int(USE_DENOISE)}"\n","!python 'New folder/scripts/train_dinodetr_fpus23.py' \\\n","  --project-root /content/fpus23_project \\\n","  --model $MODEL \\\n","  --train-json $TRAIN_JSON \\\n","  --val-json $VAL_JSON \\\n","  --train-images $TRAIN_DIR \\\n","  --val-images $VAL_DIR \\\n","  --epochs $EPOCHS \\\n","  --batch $BATCH \\\n","  --lr $LR\n"]}
