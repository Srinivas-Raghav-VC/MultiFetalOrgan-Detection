  {"cell_type": "code", "metadata": {"id": "prepare"}, "execution_count": null, "outputs": [], "source": [
    "# Prepare datasets: original → YOLO/Coco, despeckle, balanced-despeckled\n",
    "from pathlib import Path\n",
    "ORIG_ROOT = Path('/content/FPUS23_Dataset/Dataset')\n",
    "PROJ_ROOT = Path('/content/fpus23_project')\n",
    "YOLO_ORIG = PROJ_ROOT / 'dataset' / 'fpus23_yolo' / 'data.yaml'\n",
    "COCO_ROOT = PROJ_ROOT / 'dataset' / 'fpus23_coco'\n",
    "if not YOLO_ORIG.exists() or not (COCO_ROOT/'train.json').exists():\n",
    "    !python '/content/fpus23/scripts/prepare_fpus23.py' --input $ORIG_ROOT --out_root $PROJ_ROOT/'dataset'\n",
    "DESP_IMG_ROOT = PROJ_ROOT / 'dataset' / 'fpus23_yolo_despeckled' / 'images'\n",
    "DESP_YAML = DESP_IMG_ROOT.parent / 'data.yaml'\n",
    "if not DESP_YAML.exists():\n",
    "    !python '/content/fpus23/scripts/preprocess_fpus23_despeckle.py' \\\n+      --input-dir $PROJ_ROOT/'dataset/fpus23_yolo/images' \\\n+      --output-dir $DESP_IMG_ROOT \\\n+      --kernel-size 5 \\\n+      --splits train val test \\\n+      --data-yaml $YOLO_ORIG\n",
    "# Build balanced-despeckled YOLO for train (val/test remain original-despeckled)\n",
    "!python '/content/fpus23/scripts/balance_fpus23_dataset.py' --coco-root $COCO_ROOT\n",
    "BAL_COCO = COCO_ROOT / 'train_balanced.json'\n",
    "OUT_YOLO_BAL = PROJ_ROOT / 'dataset' / 'fpus23_yolo_balanced_despeckled'\n",
    "OUT_YOLO_BAL.mkdir(parents=True, exist_ok=True)\n",
    "!python '/content/fpus23/scripts/tools/coco_to_yolo.py' \\\n+       --coco-json $BAL_COCO \\\n+       --images-dir $DESP_IMG_ROOT/'train' \\\n+       --out-yolo-root $OUT_YOLO_BAL \\\n+       --orig-data-yaml $DESP_YAML\n",
    "DESP_BAL_YAML = OUT_YOLO_BAL / 'data.yaml'\n",
    "print('Prepared:')\n",
    "print('  YOLO original:', YOLO_ORIG)\n",
    "print('  YOLO despeckled:', DESP_YAML)\n",
    "print('  YOLO balanced-despeckled:', DESP_BAL_YAML)\n"
  ]},
  {"cell_type": "code", "metadata": {"id": "train_stage1"}, "execution_count": null, "outputs": [], "source": [
    "# Stage 1: 768 training on balanced-despeckled. Choose size: 's' or 'm'\n",
    "SIZE = 's'  # change to 'm' if VRAM/time allow\n",
    "BATCH = 16 if SIZE=='s' else 8\n",
    "E1 = 35  # epochs for stage 1\n",
    "RUN = f'fpus23_yolo_sota_{SIZE}'\n",
    "!yolo train data=$DESP_BAL_YAML model=yolo11{SIZE}.pt epochs=$E1 batch=$BATCH imgsz=768 \\\n+       project='/content/drive/MyDrive/FPUS23_runs' name=$RUN deterministic=True workers=2 \\\n+       cos_lr=True cls=3.2 mosaic=0.2 close_mosaic=10 copy_paste=0.05 erasing=0.3 \\\n+       resume=True save_period=1 patience=15\n"
  ]},
  {"cell_type": "code", "metadata": {"id": "train_stage2"}, "execution_count": null, "outputs": [], "source": [
    "# Stage 2: resume at 896 with lighter augs\n",
    "E2 = 15\n",
    "LAST = f"/content/drive/MyDrive/FPUS23_runs/{RUN}/weights/last.pt"\n",
    "!yolo train data=$DESP_BAL_YAML model=$LAST epochs=$E2 batch=8 imgsz=896 \\\n+       project='/content/drive/MyDrive/FPUS23_runs' name=$RUN deterministic=True workers=2 \\\n+       cos_lr=True cls=3.2 mosaic=0.0 copy_paste=0.0 erasing=0.2 \\\n+       resume=True save_period=1 patience=15\n"
  ]},
  {"cell_type": "code", "metadata": {"id": "tta_val"}, "execution_count": null, "outputs": [], "source": [
    "# TTA validation (flip/scale)\n",
    "BEST = f"/content/drive/MyDrive/FPUS23_runs/{RUN}/weights/best.pt"\n",
    "!yolo val model=$BEST data=$DESP_BAL_YAML imgsz=896 batch=8 augment=True\n"
  ]},
  {"cell_type": "code", "metadata": {"id": "scale_wbf"}, "execution_count": null, "outputs": [], "source": [
    "# Scale-TTA fusion: predict at 768 and 896, fuse with WBF, evaluate COCO mAP\n",
    "import json, yaml\n",
    "from pathlib import Path\n",
    "from ultralytics import YOLO\n",
    "from ensemble_boxes import weighted_boxes_fusion\n",
    "with open(DESP_BAL_YAML, 'r') as f: ycfg = yaml.safe_load(f)\n",
    "VAL_DIR = Path(ycfg['val'])\n",
    "IMGS = sorted([p for p in VAL_DIR.glob('*.png')]+[p for p in VAL_DIR.glob('*.jpg')]+[p for p in VAL_DIR.glob('*.jpeg')])\n",
    "model = YOLO(BEST)\n",
    "pred768 = model.predict(source=IMGS, imgsz=768, conf=0.001, iou=0.6, augment=True, verbose=False)\n",
    "pred896 = model.predict(source=IMGS, imgsz=896, conf=0.001, iou=0.6, augment=True, verbose=False)\n",
    "# Build COCO preds with WBF\n",
    "ann = json.loads((PROJ_ROOT/'dataset'/'fpus23_coco'/'val.json').read_text())\n",
    "img_id_by_name = {x['file_name']: x['id'] for x in ann['images']}\n",
    "names = ycfg.get('names', ['Abdomen','Arms','Legs','Head'])\n",
    "cat_id_by_name = {x['name']: x['id'] for x in ann['categories']}\n",
    "def collect(rs):\n",
    "    boxes=[]; scores=[]; labels=[]; w=rs.orig_shape[1]; h=rs.orig_shape[0]\n",
    "    if not rs.boxes: return boxes,scores,labels\n",
    "    import numpy as np\n",
    "    xyxy = rs.boxes.xyxy.cpu().numpy(); cls=rs.boxes.cls.cpu().numpy(); conf=rs.boxes.conf.cpu().numpy()\n",
    "    for (x1,y1,x2,y2),c,s in zip(xyxy, cls, conf):\n",
    "        boxes.append([x1/w,y1/h,x2/w,y2/h]); scores.append(float(s)); labels.append(int(c))\n",
    "    return boxes,scores,labels\n",
    "preds=[]\n",
    "for a,b in zip(pred768, pred896):\n",
    "    assert Path(a.path).name == Path(b.path).name\n",
    "    fname = Path(a.path).name; img_id = img_id_by_name.get(fname);\n",
    "    if img_id is None: continue\n",
    "    b1,s1,l1 = collect(a); b2,s2,l2 = collect(b)\n",
    "    if len(b1)+len(b2)==0: continue\n",
    "    fb, fs, fl = weighted_boxes_fusion([b1,b2],[s1,s2],[l1,l2], iou_thr=0.55, skip_box_thr=0.001)\n",
    "    W,H = a.orig_shape[1], a.orig_shape[0]\n",
    "    for (x1,y1,x2,y2), sc, lab in zip(fb, fs, fl):\n",
    "        x=float(x1*W); y=float(y1*H); w=float((x2-x1)*W); h=float((y2-y1)*H)\n",
    "        cname = names[int(lab)]; cat_id = cat_id_by_name.get(cname);\n",
    "        if cat_id is None: continue\n",
    "        preds.append({'image_id': int(img_id),'category_id': int(cat_id),'bbox':[x,y,w,h],'score': float(sc)})\n",
    "OUT = Path('/content/drive/MyDrive/FPUS23_runs')/RUN/'scale_wbf_val.json'\n",
    "OUT.write_text(json.dumps(preds))\n",
    "print('Wrote', OUT)\n",
    "!python '/content/fpus23/scripts/eval_generic_coco.py' --gt $PROJ_ROOT/'dataset/fpus23_coco/val.json' --pred $OUT --save /content/drive/MyDrive/FPUS23_runs/$RUN/scale_wbf_metrics_val.json\n"
  ]},
  {"cell_type": "code", "metadata": {"id": "sahi_val"}, "execution_count": null, "outputs": [], "source": [
    "# SAHI slice inference on val (optional)\n",
    "from sahi.models.yolov8 import Yolov8DetectionModel\n",
    "from sahi.predict import get_sliced_prediction\n",
    "import json, yaml\n",
    "with open(DESP_BAL_YAML,'r') as f: ycfg = yaml.safe_load(f)\n",
    "VAL_DIR = Path(ycfg['val'])\n",
    "IMGS = sorted([p for p in VAL_DIR.glob('*.png')]+[p for p in VAL_DIR.glob('*.jpg')]+[p for p in VAL_DIR.glob('*.jpeg')])[:500]  # cap for speed\n",
    "det_model = Yolov8DetectionModel(model_path=BEST, confidence_threshold=0.2, device='cuda:0')\n",
    "ann = json.loads((PROJ_ROOT/'dataset'/'fpus23_coco'/'val.json').read_text())\n",
    "img_id_by_name = {x['file_name']: x['id'] for x in ann['images']}\n",
    "names = ycfg.get('names', ['Abdomen','Arms','Legs','Head'])\n",
    "cat_id_by_name = {x['name']: x['id'] for x in ann['categories']}\n",
    "preds = []\n",
    "for p in IMGS:\n",
    "    r = get_sliced_prediction(str(p), det_model, slice_height=640, slice_width=640, overlap_height_ratio=0.2, overlap_width_ratio=0.2)\n",
    "    for o in r.object_prediction_list:\n",
    "        x1,y1,x2,y2 = o.bbox.to_xyxy()\n",
    "        w = x2-x1; h=y2-y1\n",
    "        cat = o.category.name; cat_id = cat_id_by_name.get(cat)\n",
    "        if cat_id is None: continue\n",
    "        preds.append({'image_id': int(img_id_by_name.get(p.name, -1)), 'category_id': int(cat_id), 'bbox':[float(x1),float(y1),float(w),float(h)], 'score': float(o.score.value)})\n",
    "SOUT = Path('/content/drive/MyDrive/FPUS23_runs')/RUN/'sahi_val.json'\n",
    "SOUT.write_text(json.dumps(preds))\n",
    "print('Wrote', SOUT)\n",
    "!python '/content/fpus23/scripts/eval_generic_coco.py' --gt $PROJ_ROOT/'dataset/fpus23_coco/val.json' --pred $SOUT --save /content/drive/MyDrive/FPUS23_runs/$RUN/sahi_metrics_val.json\n"
  ]},
  {"cell_type": "code", "metadata": {"id": "pseudo_labels"}, "execution_count": null, "outputs": [], "source": [
    "# Pseudo-label unlabeled images (optional) and fine-tune 20 epochs\n",
    "from ultralytics import YOLO\n",
    "import shutil, yaml\n",
    "model = YOLO(BEST)\n",
    "# Find unlabeled: all PNGs under original dataset minus YOLO splits\n",
    "orig_pngs = sorted(list(ORIG_ROOT.glob('**/*.png')))\n",
    "with open(DESP_YAML,'r') as f: dy = yaml.safe_load(f)\n",
    "def list_split(root_key):\n",
    "    rp = Path(dy[root_key])\n",
    "    return set([p.stem for p in sorted((rp).glob('*.png'))])\n",
    "seen = set()\n",
    "for k in ['train','val','test']:\n",
    "    try: seen |= list_split(k)\n",
    "    except Exception: pass\n",
    "unlabeled = [p for p in orig_pngs if p.stem not in seen][:2000]  # cap for speed\n",
    "PSEUDO_ROOT = PROJ_ROOT/'dataset'/'fpus23_yolo_pseudo'\n",
    "(PSEUDO_ROOT/'images'/'train').mkdir(parents=True, exist_ok=True)\n",
    "(PSEUDO_ROOT/'labels'/'train').mkdir(parents=True, exist_ok=True)\n",
    "# Per-class thresholds (tune as needed)\n",
    "thr = {0:0.5, 1:0.45, 2:0.45, 3:0.5}\n",
    "res = model.predict(source=unlabeled, imgsz=896, conf=0.001, iou=0.6, verbose=False)\n",
    "for r in res:\n",
    "    dst = PSEUDO_ROOT/'images'/'train'/Path(r.path).name\n",
    "    if not dst.exists():\n",
    "        shutil.copy2(r.path, dst)\n",
    "    if not r.boxes:\n",
    "        continue\n",
    "    import numpy as np\n",
    "    W = r.orig_shape[1]; H = r.orig_shape[0]\n",
    "    xyxy = r.boxes.xyxy.cpu().numpy(); cls=r.boxes.cls.cpu().numpy(); conf=r.boxes.conf.cpu().numpy()\n",
    "    lines=[]\n",
    "    for (x1,y1,x2,y2),c,s in zip(xyxy,cls,conf):\n",
    "        c = int(c); s=float(s)\n",
    "        if s < thr.get(c,0.5): continue\n",
    "        xc=(x1+x2)/(2*W); yc=(y1+y2)/(2*H); wn=(x2-x1)/W; hn=(y2-y1)/H\n",
    "        lines.append(f"{c} {xc:.6f} {yc:.6f} {wn:.6f} {hn:.6f}")\n",
    "    if lines:\n",
    "        (PSEUDO_ROOT/'labels'/'train'/(dst.stem+'.txt')).write_text('\n'.join(lines))\n",
    "# Create a mixed train YAML: [balanced-despeckled, pseudo-labeled]\n",
    "MIX_YAML = PROJ_ROOT/'dataset'/'fpus23_yolo_mix/data.yaml'\n",
    "MIX_YAML.parent.mkdir(parents=True, exist_ok=True)\n",
    "MIX_YAML.write_text(f"train: ['{OUT_YOLO_BAL}/images/train','{PSEUDO_ROOT}/images/train']\nval: {dy['val']}\ntest: {dy.get('test',dy['val'])}\nnc: 4\nnames: {dy.get('names',['Abdomen','Arms','Legs','Head'])}\n")\n",
    "# Short fine-tune on MIX (20 epochs)\n",
    "!yolo train data=$MIX_YAML model=$BEST epochs=20 batch=8 imgsz=896 \\\n+       project='/content/drive/MyDrive/FPUS23_runs' name=$RUN'_mix' deterministic=True workers=2 \\\n+       cos_lr=True cls=3.2 mosaic=0.0 copy_paste=0.0 erasing=0.2 \\\n+       resume=True save_period=1 patience=10\n"
  ]},
